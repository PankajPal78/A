# LLM Configuration
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=False

# Upload Settings
UPLOAD_FOLDER=/app/data/uploads
