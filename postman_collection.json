{
  "info": {
    "name": "RAG Document Q&A API",
    "description": "API collection for testing the RAG Document Q&A system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        },
        "description": "Check if the API is running"
      }
    },
    {
      "name": "Upload Document",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "/path/to/your/document.pdf",
              "description": "PDF or TXT file to upload"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/upload",
          "host": ["{{base_url}}"],
          "path": ["api", "upload"]
        },
        "description": "Upload a document for processing"
      }
    },
    {
      "name": "Query Documents",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"question\": \"What is the main topic of the document?\",\n  \"top_k\": 5\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/query",
          "host": ["{{base_url}}"],
          "path": ["api", "query"]
        },
        "description": "Ask a question based on uploaded documents"
      }
    },
    {
      "name": "List All Documents",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/documents",
          "host": ["{{base_url}}"],
          "path": ["api", "documents"]
        },
        "description": "Get list of all uploaded documents with metadata"
      }
    },
    {
      "name": "Get Document by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/documents/1",
          "host": ["{{base_url}}"],
          "path": ["api", "documents", "1"]
        },
        "description": "Get specific document metadata by ID"
      }
    },
    {
      "name": "Delete Document",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/documents/1",
          "host": ["{{base_url}}"],
          "path": ["api", "documents", "1"]
        },
        "description": "Delete a document and its associated data"
      }
    },
    {
      "name": "Get System Statistics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/stats",
          "host": ["{{base_url}}"],
          "path": ["api", "stats"]
        },
        "description": "Get system statistics including document counts and vector store info"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}