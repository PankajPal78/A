      },
      "response": []
    },
    {
      "name": "Upload Document",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "metadata",
              "value": "{\"title\": \"Test Document\", \"description\": \"A test document for the RAG system\"}",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/documents/upload",
